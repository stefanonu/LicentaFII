<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="fill_parent"
    android:orientation="vertical">

    <TextView android:text="TextView"
        android:id="@+id/characteristic_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dip"
        android:textAppearance="?android:attr/textAppearanceLarge">
    </TextView>

    <TextView android:id="@+id/characteristic_uuid"
        android:text="TextView"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="40dip"
        android:textAppearance="?android:attr/textAppearanceSmall">
    </TextView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Properties:"
            android:layout_marginLeft="40dip"
            android:id="@+id/textView" />

        <TextView android:text="TextView" android:id="@+id/characteristic_properties"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Permission : "
            android:layout_marginLeft="40dip"
            android:id="@+id/textView8" />

        <TextView
            android:text="TextView"
            android:id="@+id/characteristic_permission"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Write Type : "
            android:layout_marginLeft="40dip"
            android:id="@+id/textView9" />

        <TextView
            android:text="TextView"
            android:id="@+id/characteristic_writetype"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>
</LinearLayout>
